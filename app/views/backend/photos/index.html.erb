    <th>Picture</th>
    <th>Caption</th>
    <th>Picture</th>
    <th>Action</th>
	<th>Number of Comments</th>
	
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.name %></td>
    <td><%= photo.picture %></td>
    <td><%= photo.caption %></td>
	<td><%= image_tag photo.picture_url(:thumb) if photo.picture? %>
    <td><%= link_to 'Show', backend_photo_path(photo) %>
	<%= link_to 'Edit', edit_backend_photo_path(photo) %>
	<%= link_to 'Destroy', backend_photo_path(photo), method: :delete, data: { confirm: 'Are you sure?' } %>
	</td>
	<td><h4><center><%= photo.photocomments.count %></center></h4></td>
    

    
  </tr>
<% end %>
</table>
