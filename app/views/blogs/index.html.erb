<% provide(:title, 'Posts') %>

<h1>Blogs</h1>

<div id=content>

<% @blogs.each do |blog| %>

<h4 id=hasatu><%= blog.name %></h4>
Posted at <%= blog.created_at.strftime("%d %B %Y") %><br><br>

<%= blog.content.truncate(300).html_safe %><br>

<%= link_to 'Show more', blog %>
<br><br><br>    
<% end %>

<%= will_paginate @blogs %>  

</div>